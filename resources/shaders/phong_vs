#version 450 core
layout (location = 0) in vec3 a_pos;
layout (location = 1) in vec3 a_norm;

out vec3 norm;
out vec3 frag_pos;

uniform mat4 proj;
uniform mat4 view;
uniform mat4 model;

void main()
{
   gl_Position = proj * view * model * vec4(a_pos, 1.0);
   norm = mat3(transpose(inverse(model))) * a_norm;
   frag_pos = vec3(model * vec4(a_pos, 1.0));
}