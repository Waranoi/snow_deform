#version 450 core
layout (location = 0) in vec3 a_pos;
layout (location = 1) in vec3 a_norm;
layout (location = 2) in vec2 a_tex_coord;

out vec3 norm;
out vec2 tex_coord;

uniform mat4 proj;
uniform mat4 view;
uniform mat4 model;

void main()
{
   gl_Position = proj * view * model * vec4(a_pos, 1.0);
   norm = a_norm;
   tex_coord = a_tex_coord;
}