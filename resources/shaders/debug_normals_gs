#version 450 core
layout(triangles) in;
layout(line_strip, max_vertices=6) out;

in VERTEX
{
	vec3 norm;
    vec2 tex_coord;
    vec3 color;
} vertices[];

out VERTEX
{
    vec3 norm;
    vec2 tex_coord;
    vec3 color;
} vertex;

void main()
{
	for(int i = 0; i < 3; i++) 
	{ 
		gl_Position = gl_in[i].gl_Position;
		vertex.norm = vertices[i].norm;
		vertex.tex_coord = vertices[i].tex_coord;
		vertex.color = abs(vertices[i].norm);
		EmitVertex();

		gl_Position = gl_in[i].gl_Position;
		gl_Position.xyz += vertices[i].norm;
		vertex.norm = vertices[i].norm;
		vertex.tex_coord = vertices[i].tex_coord;
		vertex.color = abs(vertices[i].norm);
		EmitVertex();
		
		EndPrimitive();
	}
}